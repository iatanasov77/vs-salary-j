<!DOCTYPE html>
<html lang="{{ app.request.locale|slice(0, 2) }}">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>{% block title %}{{ applicationTitle }}{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{ asset( 'build/salaryj-sbadmin-theme/images/vankosoft-thumb.png' ) }}" />
        
        {% block stylesheets %}
            {{ encore_entry_link_tags( 'css/app', null, 'SalaryjSbadminThemeConfig' ) }}
        {% endblock %}
        
        {% block javascripts %}
            {{ encore_entry_script_tags( 'js/app', null, 'SalaryjSbadminThemeConfig' ) }}
        {% endblock %}
    </head>
    <body class="bg-primary">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                {% block content %}{% endblock %}
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <div id="layoutAuthentication_footer">
                {% include 'layout/footer.html.twig' %}
            </div>
        </div>
        {% block body_javascripts %}{% endblock %}
    </body>
</html>
