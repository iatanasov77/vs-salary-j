<!DOCTYPE html>
<html lang="{{ app.request.locale|slice(0, 2) }}">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>{% block title %}{{ applicationTitle }}{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{ asset( 'build/salaryj-sbadmin-theme/images/vankosoft-thumb.png' ) }}" />
        
        {% block stylesheets %}
            {{ encore_entry_link_tags( 'css/app', null, 'SalaryjSbadminThemeConfig' ) }}
        {% endblock %}
        
        {% block javascripts %}
            {{ encore_entry_script_tags( 'js/app', null, 'SalaryjSbadminThemeConfig' ) }}
        {% endblock %}
    </head>
    <body class="sb-nav-fixed">
        {% include 'layout/header.html.twig' %}
        
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                {{ knp_menu_render( 'mainApplication', { 'template': 'menu/main-menu.html.twig' } ) }}
            </div>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4 mt-2">
                        {{ knp_menu_render( 'breadcrumbs', {'template': 'menu/breadcrumb.html.twig'} ) }}
                        
                        {% block content %}{% endblock %}
                    </div>
                </main>
                
                {% include 'layout/footer.html.twig' %}
            </div>
        </div>
        
        {% block body_javascripts %}
        	{{ encore_entry_script_tags( 'js/main', null, 'SalaryjSbadminThemeConfig' ) }}
        {% endblock %}
    </body>
</html>
            