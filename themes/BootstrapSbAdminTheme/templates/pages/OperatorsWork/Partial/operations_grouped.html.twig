<form name="formOperatorWorks" action="" method="post">
	<table cellpadding="2" cellspacing="1" width="100%" class="table">
		<thead class="table-dark">
    		<tr class="TableHead">
    			<td>{{ 'salary-j.pages.model' | trans( {},'SalaryJ' ) }}</td>
    			<td>{{ 'salary-j.pages.operation' | trans( {},'SalaryJ' ) }}</td>
    			<td width="10%">{{ 'salary-j.pages.unit_price' | trans( {},'SalaryJ' ) }}</td>
    			<td width="5%">{{ 'salary-j.pages.pieces' | trans( {},'SalaryJ' ) }}</td>
    			<td width="5%">{{ 'salary-j.pages.total' | trans( {},'SalaryJ' ) }}</td>
    		</tr>
    	</thead>
    	
    	<tbody>
        	{% for w in work.listOperations %}
        		<tr class="bottomborder">
        			<td>
        				{{ w.modelNumber }}.&nbsp;&nbsp;{{ w.modelName }}
        			</td>
        			<td>
        				{{ w.operationNumber }}.&nbsp;&nbsp;{{ w.operationName }}
        			</td>
        			<td width="10%">
        				{{ w.max_price }}
        			</td>
        			<td width="5%">
        				{{ w.sum_count }}
        			</td>
        			<td width="5%">
        				<div>{{ w.sum_total }}</div>
        			</td>
        		</tr>
        	{% endfor %}
    		<tr>
    			<td colspan="4">&nbsp;</td>
    		</tr>
    		<tr>
    			<td colspan="2">&nbsp;</td>
    			<td align="left"><b>{{ 'salary-j.pages.total' | trans( {},'SalaryJ' ) }}:</b></td>
    			<td align="right">{{ work.grandTotal }}</td>
    		</tr>
    	</tbody>
    	
    	<tfoot>
    		<tr>
    			<td colspan="7">
    				<input type="button" name="open_print"
    				    value="{{ 'salary-j.pages.print' | trans( {},'SalaryJ' ) }}"
    					id="btnPrint"
    					class="btn btn-secondary"
    					data-url="{{ path( 'app_operators_work_print_operations_grouped', {'operatorId': operator.id, 'startDate': dateRange['startDate'] | date( 'Y-m-d' ), 'endDate': dateRange['endDate'] | date( 'Y-m-d' )}) }}"
    				/>
    			</td>
    		</tr>
		</tfoot>
	</table>
</form>
