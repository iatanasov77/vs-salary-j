{% extends "base.html.twig" %}

{% block content %}
    <h1 class="text-center mt-4" id="PageTitle">{{ 'salary-j.pages.operators_groups' | trans( {},'SalaryJ' ) }}</h1>
    
    {{ form_start(form, { 'attr': {'class': 'form-horizontal mb-4', 'id': 'form-post'}, 'action': path('salaryj_operatorsgroups_create'), 'method': 'POST' }) }}
        {{ form_widget( form.application_code, {'value' : application.code} ) }}
    
    	<table cellspacing="20" cellpadding="2">
    		<tr class="d-none" >
    			<td colspan="2">
    				{{ form_widget( form.currentLocale ) }}
    				{{ form_widget( form.parent ) }}
    			</td>
    		</tr>
    		<tr>
    			<td colspan="2"><b>{{ 'salary-j.pages.add_new_group' | trans( {},'SalaryJ' ) }}</b></td>
    		</tr>
    		<tr>
    			<td>{{ form_label(form.operator_group.name ) }}</td>
    			<td>&nbsp;</td>
    		</tr>
    		<tr>
				<td>{{ form_widget(form.operator_group.name, {'attr': {'class': 'form-control', 'size': '40'}} ) }}</td>
				<td>{{ form_widget(form.btnSave, {'attr': {'class': 'btn btn-secondary'}} ) }}</td>
			</tr>
		</table>
    {{ form_end(form, {'render_rest': false}) }}
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            {{ 'salary-j.pages.operators_groups' | trans( {},'SalaryJ' ) }}
        </div>
        <div class="card-body">
            {{ form_start( index_form, { attr: { id: 'operators_groups_index_form'} } ) }}
                
                <div class="mb-2">
                    <a id="checkAll" href="javascript:void(0);">{{ 'salary-j.pages.all' | trans( {},'SalaryJ' ) }}</a> / 
                    <a id="uncheckAll" href="javascript:void(0);">{{ 'salary-j.pages.nothing' | trans( {},'SalaryJ' ) }}</a>
                </div>
            
            	<table cellpadding="2" cellspacing="1" width="100%" class="table">
            		<thead class="table-dark">
            			<tr class="TableHead">
            			    <th width="2%"></th>
            				<th align="left">{{ 'salary-j.form.name' | trans( {},'SalaryJ' ) }}</th>
            			</tr>
            		</thead>
            		
            		<tbody>
            			{% for grId, grWidget in index_form.operators_groups %}
            			    <tr>
            			        <td class="pt-3">
            			        	<input type="checkbox" name="grids[{{ grId }}]" class="form-check-input" />
            			        </td>
            					<td>
            				        <font class="ItemsList">
                                        {{ form_widget( grWidget.name, {'attr': {'class': 'form-control', 'size': '60'}} ) }}
            				        </font>
            					</td>
            				</tr>
            			{% endfor %}
            		</tbody>
            
            		<tfoot class="mt-3 pt-3">
                        <tr>
                            <td colspan="7">
                                {{ form_widget( index_form.change_names, {'attr': {'class': 'btn btn-secondary'}} ) }}
                                {{ form_widget( index_form.del_groups, {'attr': {'class': 'btn btn-secondary'}} ) }}
                            </td>
                        </tr>
                    </tfoot>
            	</table>
            {{ form_end( index_form ) }}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags( 'js/pages/operators_groups', null, 'SalaryjSbadminThemeConfig' ) }}
{% endblock %}

{% block body_javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags( 'js/pages/operators_groups', null, 'SalaryjSbadminThemeConfig' ) }}
{% endblock %}
