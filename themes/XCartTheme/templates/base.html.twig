<!DOCTYPE html>
<html lang="{{ app.request.locale|slice(0, 2) }}">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ applicationTitle }}{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{ asset( 'build/xcart-theme/images/vankosoft-thumb.png' ) }}" />
        
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags( 'css/app', null, 'xcartThemeConfig' ) }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags( 'js/app', null, 'xcartThemeConfig' ) }}
        {% endblock %}
    </head>
    <body>
        <table class="Container" cellpadding="0" cellspacing="0" width="100%">
        	<tr>
        		<td class="Container">
        			{% include 'layout/header.html.twig' %}
        
        			<!-- main area -->
        			<table width="100%" cellpadding="0" cellspacing="0" align="center">
        				<tr>
        					<td width="3">&nbsp;</td>
        					<td width="150" valign="top">
        						{% include 'layout/sidebar.html.twig' %}
        					</td>
        					<td width="20">&nbsp;</td>
        					<td valign="top">
        						<br /><br />
        					
        						<!-- central space -->
        					    {% block content %}{% endblock %}
        						<!-- /central space -->
        						&nbsp;
        					</td>
        					<td><img src="{{ asset( 'build/xcart-theme/images/spacer.gif' ) }}" width="20" height="1" border="0" /> </td>
        				</tr>
        			</table>
        			<!-- /main area -->
        
        		</td>
        	</tr>
        	<tr>
        		<td><img src="{{ asset( 'build/xcart-theme/images/spacer.gif' ) }}" class="Spc" alt="" /></td>
        	</tr>
        	<tr>
        		<td class="BottomRow">
        			{% include 'layout/footer.html.twig' %}
        		</td>
        	</tr>
        </table>
        
        {% block body_javascripts %}{% endblock %}
    </body>
</html>
