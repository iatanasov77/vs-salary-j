{% extends 'knp_menu.html.twig' %}

{% block root %}
    <table cellspacing="0" cellpadding="0" width="100%" class="VertMenuBorder">
        <tr>
            <td class="VertMenuTitleBox">
                <table cellspacing="0" cellpadding="0" width="100%">
                    <tr>
                        <td>
                            <img src="{{ asset( 'build/default/images/dingbats_categorie.gif' ) }}" alt="Main Menu" width="17" height="17" class="VertMenuTitleIcon" />
                        </td>
                        <td width="100%">
                            <font class="VertMenuTitle">{{ 'salary-j.menu.main_menu_title' | trans( {},'SalaryJ' ) }}</font>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td class="VertMenuBox">
                <table cellpadding="5" cellspacing="0" width="100%">
                    <tr>
                        <td>
                            {% for parentItem in item.children %}
                                {% if parentItem.extra( 'divider' ) %}
                                    <hr />
                                {% else %}
                                    <a href="{{ parentItem.uri }}" class="VertMenuItems">{{ parentItem.name | trans( {},'SalaryJ' ) }}</a>
                                    <br />
                                {% endif %}
                            {% endfor %}
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
	
{% endblock %}
