{% extends "salary-j/base-print.html.twig" %}

{% block content %}
	<!-- BEGIN Operator Work Print -->
    <div class="print">
    	<h1 align="center">{{ operator.name }}</h1>
    	<p align="center">период: {{ dateRange['startDate'] | date( 'd.m.Y' ) }}   -  {{ dateRange['endDate'] | date( 'd.m.Y' ) }}</p>
    	<br /><br /><br />

		<table cellspacing="1" class="DialogBox">
			<tr>
				<td class="DialogBox" valign="top"><br />
						<table cellpadding="2" cellspacing="1" width="100%">
							<tr class="TableHead">
								<td width="15%">Модел</td>
								<td>Операция</td>
								<td width="5%">Ед. Цена</td>
								<td width="5%">Бройки</td>
								<td width="5%">Общо</td>
							</tr>

						{% for w in work.listOperations %}
							<tr class="bottomborder {cycle values=",TableSubHead"}">
								<td width="15%">
									{{ w.modelNumber }}.&nbsp;&nbsp;{{ w.modelName }}
								</td>
								<td>
									{{ w.operationId }}.&nbsp;&nbsp;{{ w.operationName }}
								</td>
								<td width="5%">
									{{ w.max_price }}
								</td>
								<td width="5%">
									{{ w.sum_count }}
								</td>
								<td width="5%">
									{{ w.sum_total }}
								</td>
							</tr>
						{% endfor %}
						
							<tr>
								<td colspan="4">&nbsp;</td>
							</tr>
							<tr>
								<td colspan="2">&nbsp;</td>
								<td align="left"><b>TOTAL:</b></td>
								<td align="right">{{ work.grandTotal }}</td>
							</tr>
						
						</table>
					<br />&nbsp;
				</td>
			</tr>
			<tr>
				<td>{# $pager #}</td>
			</tr>
		</table>
	</div>
	<!-- END Operator Work Print -->
{% endblock %}
